/* Page / Article content */
#page img[style="float: right;"], .article img[style="float: right;"] { margin-left: 30px; }
#page img[style="float: left;"], .article img[style="float: left;"] { margin-right: 30px; }

#logo {
	float:left;
	width:180px;
}
.header__mobile-buttons {
	font-size:0.8em;
	position:absolute;
	bottom:26px;
	right:0;
	margin-bottom:0;
}
@media (min-width: 540px) {
	.header__mobile-buttons {
		font-size:0.9em;
	}
}
.header__mobile-buttons .ghost > img {
	height:2em;
	margin-top:0;
}
.header__mobile-menu {
	padding:0 20px;
}
#mobile-main-menu {
	font-size:1.2em;
}
#slideshow-sale-tag {
	width:auto;
  z-index: 3;
}
h1.collection-title {
	margin-top:1%;
	padding:0 20px;
}
.template--product h1.collection-title {
	margin-bottom:1.5%;
}
#collection .product {
	width:30.5%;
	clear:none !important;
}
#collection .clear-row {
	display:block;
}
#product > .info > header {
	margin-bottom:1%;
	font-size:1.2em;
}
#blog > .articles {
	width:64.13%;
	font-size:0.9em;
}
#blog > aside {
	width:30.25%;
	margin-top:0;
}
#blog-sidebar > .about > h2 {
	display:block;
	margin-top:0;
	margin-bottom:10%;
}
#bottom-links li {
	display:inline-block;
	padding:0 0.5em 0 2.5em;
	line-height:1;
	background:transparent url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAICAYAAADJEc7MAAAAP0lEQVQYlWP4TyZgwCb49sun/1eePfh/8cm9/88+vP3/5+9f/BphGs49uoOCsRnAgE8DLgMo10i2UykOHFIAAKBArHYdl/RcAAAAAElFTkSuQmCC) left top no-repeat;
}
#bottom-links li:first-child {
	background-image:none;
}

