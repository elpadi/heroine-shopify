nav > ul.horizontal > li {
	float: none;
	display:inline-block;
	margin-bottom:0;
}
nav > ul > li > a {
	padding-left:14px;
	padding-right:14px;
}
.columns--3 {
	overflow:hidden;
	text-align:center;
}
.columns--3 > .column {
	max-width:33%;
}
.columns--3 > .column:first-child {
	float:left;
	text-align:left;
}
.columns--3 > .column:nth-child(2) {
	display:inline-block;
	margin:auto;
}
.columns--3 > .column:last-child {
	float:right;
	text-align:right;
}


.header__logo {
	float:left;
}
.header__search-and-buttons {
	display:block;
}
.mobile-only {
	display:none;
}
#logo {
	float:none;
	width:auto;
}
#main-header .search {
	margin-top:17px;
	margin-bottom:39px;
}

#main-menu {
	display:block;
	margin-top:4.5%;
	padding-bottom:1%;
	margin-bottom:1.5%;
}
.template--index #main-menu {
	border-style:none;
	margin-bottom:0;
}
.template--collection #main-menu {
	margin-bottom:2.75%;
}
#main-menu a {
	font:1.05em brandon_grotesque_regularRg,sans-serif;
	letter-spacing:0.05em;
	height:auto;
}
#main-menu a.current {
	position:relative;
}
#main-menu a.current::before {
	content:'';
	position:absolute;
	top:-2em;
	left:0;
	width:100%;
	height:27px;
	background:transparent url({{ 'menu-arrow.png' | asset_url }}) center top no-repeat;
}

#main-footer {
	margin:0;
	text-align:left;
}
.template--index #footer-menu {
	margin-top:0;
	border-top-style:none;
}
#footer-columns {
	padding-bottom:5%;
}
#footer-columns > .column {
	margin-bottom:0;
}
#footer-contact {
	max-width:25%;
}
#footer-newsletter {
	max-width:46%;
}
#footer-social {
	max-width:26%;
	min-width:16%;
	text-align:right;
}
#footer-social ul {
	margin-top:0.5em;
}

#collection > aside,
#content > aside {
	display:block;
	width:25%;
}
#collection h1,
#content > aside h1 {
	font-size:1.4em;
	margin-top:8%;
	margin-bottom:8%;
	padding:0;
}
#collection-main,
#product-main {
	width:73%;
}
#collection > aside > .sale-button {
	display:block;
	clear:both;
}
#collection .details {
	font-size:1em;
}
#collection .title {
	margin-bottom:-2px;
}
#collection-menu {
	font-size:0.9em;
	margin-bottom:23%;
	width:100%;
}
#collection-menu ul,
#collection-menu li {
	display:none;
}
#collection-menu > nav > ul {
	display:block;
}
#collection-menu ul {
	text-align:left;
	list-style-type:none;
	margin:0;
}
#collection-menu li {
	display:block;
	margin:0;
}
#collection-menu button,
#collection-menu a {
	letter-spacing:1px;
}
#collection-menu button {
	color:{{ settings.link_color }};
}
#collection-menu a,
#collection-menu > nav > ul > li > button {
	text-transform:uppercase;
}
#collection-menu > nav > ul > li > ul > li > button,
#collection-menu > nav > ul > li > ul > li > a {
	text-transform:lowercase;
	font-size:1.25em;
}
#collection-menu > nav > ul > li,
#collection-menu > nav > ul > li > ul > li {
	margin-bottom:5%;
}
#collection-menu > nav > ul > li > ul {
	padding-left:8%;
}
#collection-menu > nav > ul > li > ul > li > ul {
	padding-left:11%;
}
#collection-menu a {
	padding:0;
	line-height:1.2;
	font-size:1em;
	height:auto;
}
#collection-menu > nav > ul > li > a {
	line-height:1.8;
}

