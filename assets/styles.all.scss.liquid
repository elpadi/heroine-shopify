@font-face{
	font-family:'brandon_grotesque_regularRg';
	src:url({{ 'brandon_reg-webfont.eot' | asset_url }});
	src:url({{ 'brandon_reg-webfont.eot' | asset_url }}?#iefix) format('embedded-opentype'),
		url({{ 'brandon_reg-webfont.woff' | asset_url }}) format('woff'),
		url({{ 'brandon_reg-webfont.ttf' | asset_url }}) format('truetype'),
		url({{ 'brandon_reg-webfont.svg' | asset_url }}#brandon_grotesque_regularRg) format('svg');
	font-weight:normal;
	font-style:normal;
}
@font-face{
	font-family:'brandon_grotesquemedium';
	src:url({{ 'brandon_med-webfont.eot' | asset_url }});
	src:url({{ 'brandon_med-webfont.eot' | asset_url }}?#iefix) format('embedded-opentype'),
		url({{ 'brandon_med-webfont.woff' | asset_url }}) format('woff'),
		url({{ 'brandon_med-webfont.ttf' | asset_url }}) format('truetype'),
		url({{ 'brandon_med-webfont.svg' | asset_url }}#brandon_grotesquemedium) format('svg');
	font-weight:normal;
	font-style:normal;
}

body {
	overflow-x:hidden;
}
h1 {
	font-weight: 400;
	color: {{ settings.header_color }};
	font-size: 1.5em;
	line-height: 1;
	text-transform:uppercase;
	letter-spacing:2px;
}
input {
	color:#656263;
}
nav > ul.horizontal > li {
	margin-bottom:0.5em;
}
nav > ul.horizontal > li:last-child {
	margin-bottom:0;
}
.back-button {
	overflow:hidden;
	text-indent:100%;
	width:70px;
	height:34px;
	background:transparent url({{ 'back-button.png' | asset_url }}) top left no-repeat;
}
#collection-menu li.selected > button,
a:hover {
	color:#68C8C6;
}
.red-link,
.red-link:hover,
#footer-menu a.current,
#collection-menu a.selected {
	color:#F58878;
}

input,
.font--bg-reg,
.font--bg-reg button {
	font-family:brandon_grotesque_regularRg,sans-serif;
}
#page,
#blog,
.font--georgia {
	font-family:Georgia, Utopia, 'Times New Roman', Times, serif
}

.header__mobile-buttons button,
#collection-menu button,
.clean-button {
	background-color:transparent;
	border-style:none;
	padding:0;
	text-transform:inherit;
	-webkit-appearance:none;
}
.underline {
	text-decoration:underline;
}
.row, .clearfix {
	clear:both;
}
.inside-margins {
	margin-left:20px;
	margin-right:20px;
}
@media (min-width: 853px) {
	.inside-margins {
		max-width:853px;
		margin-left:auto;
		margin-right:auto;
	}
}

#comments-form .text,
.newsletter-inputs .form-text,
.search {
	border:1px solid #d5dce2;
}
.newsletter-inputs .form-text,
.search > input[type="text"] {
	height:26px;
	font:12px/28px "courier new",sans-serif;
	padding:0 0 0 8px;
}
.header__mobile-search .search > input[type="text"] {
	width:100%;
}
.search > input[type="text"] {
	max-width:calc(100% - 36px);
}
.newsletter-inputs .form-item {
	max-width:calc(100% - 105px);
}
.newsletter-inputs .form-text {
	line-height:30px;
	max-width:100%;
	padding:0;
	text-indent:8px;
}
.newsletter-inputs form {
	margin-top:0.7em;
}
.newsletter-inputs label {
	display:none;
}
.newsletter-inputs .form-item {
	display:inline-block;
}
.newsletter-inputs input[type="image"] {
	height:32px;
	margin-top:-2px;
	margin-left:0.5em;
	padding:0;
}

.double-bars--all {
	position:relative;
	border:solid 1px #E4E1DC;
	max-width:calc(100% - 12px);
}
.double-bars--all::before {
	content:'';
	position:absolute;
	width:calc(100% + 12px);
	height:calc(100% + 12px);
	left:-7px;
	top:-7px;
	border:solid 1px #E4E1DC;
}
.double-bars--top {
	border-top:double 4px #E4E1DC;
}
.double-bars--bottom {
	border-bottom:double 4px #E4E1DC;
}
#add_address input[type="text"],
#customer-register input.text,
#customer-login input.text,
.dotted-borders {
	border-image:url({{ 'dotted-border.png' | asset_url }}) 5 5 5 5 round round;
}

.social-media-buttons {
}
.social-media-buttons > li {
	display:inline-block;
}

#main-header {
	background: transparent url({{ 'border-top.gif' | asset_url }}) center top repeat-x;
	padding-top:65px;
}
body {
	background: transparent url({{ 'border-bottom.gif' | asset_url }}) center bottom repeat-x;
}

.header__logo {
	float:none;
	overflow:auto;
	position:relative;
}
.header__mobile-buttons {
	text-transform:uppercase;
	position:absolute;
	bottom:30px;
	right:0;
}
.header__mobile-buttons button,
.header__mobile-buttons a {
	color:#C0AE74;
}
.header__mobile-buttons .sep {
	border-right:1px solid #C0AE74;
	margin:0 0.7em 0 0.4em;
	font-size:0.6em;
}
.header__search-and-buttons {
	display:none;
}
.header__mobile-search {
	clear:both;
	margin-bottom:3%;
}
#logo {
	float:left;
	margin-left:-7px;
	width:35%;
}
#logo > a {
	display:block;
}
.search {
	height:26px;
}
.search > input[type="image"] {
	height:auto;
	padding:0;
	margin-top:1px;
}

#main-header .cart {
	margin-left:13px;
}
.customer-buttons {
	clear:both;
}
#main-header .customer-buttons > p {
	margin-top:5px;
	line-height:23px;
}
#main-header .customer-buttons a {
	color:#b79f62;
	font:0.75em brandon_grotesque_regularRg,sans-serif;
	letter-spacing:0.05em;
	text-transform:uppercase;
}

#main-menu {
	display:none;
}
#content {
	position:relative;
	margin-bottom:5%;
}
.template--index #content {
	margin-bottom:0;
}
#slideshow-sale-tag {
  position: absolute;
  top: -9px;
  z-index: 2;
  right: -11px;
}

#main-footer {
	margin:0 20px;
	text-align:center;
}
#footer-menu {
	padding:1.2em 0;
	margin-bottom:3%;
}
.template--index #footer-menu {
	margin-top:3%;
}
#footer-menu a {
	font:0.85em brandon_grotesquemedium,sans-serif;
	letter-spacing:0.05em;
	height:auto;
}
#footer-columns > .column {
	margin-bottom:4%;
}
#main-footer h2 {
	position:relative;
	display:inline-block;
	text-transform:uppercase;
	font:1.2em serif;
	color:#cbc7c3;
	font-weight:bold;
	white-space:nowrap;
	margin-bottom:0.4em;
	letter-spacing:2px;
}
#main-footer h2::after {
	content:'';
	background:white url({{ 'footer-headings.jpg' | asset_url }}) no-repeat left top;
	position:absolute;
	width:100%;
	height:100%;
	left:0;
	top:0;
}
#heading-newsletter-sign-up::after { background-position: 51% 0 !important; }
#heading-follow-us::after { background-position: 97% 0 !important; }

#footer-contact > p {
	font-size:0.9em;
	line-height:1.6;
	margin-bottom:0;
}
#footer-social ul {
	list-style-type:none;
}
#footer-social li {
}
#bottom-links {
	font-family:"courier new",sans-serif;
	text-transform:uppercase;
	font-size:0.7em;
	padding-top:1.5%;
	padding-bottom:7%;
}
#bottom-links ul {
}
#bottom-links li {
	display:inline-block;
	padding:0 0.5em 0 2.5em;
	background:transparent url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAICAYAAADJEc7MAAAAP0lEQVQYlWP4TyZgwCb49sun/1eePfh/8cm9/88+vP3/5+9f/BphGs49uoOCsRnAgE8DLgMo10i2UykOHFIAAKBArHYdl/RcAAAAAElFTkSuQmCC) left top no-repeat;
}
#bottom-links li:first-child {
	background-image:none;
}
#bottom-links a {
	font-size:1em;
	line-height:1;
	height:auto;
	padding:0;
	color:inherit;
}

#collection,
.template--product #content {
	overflow:auto;
}
#collection,
#content > aside {
	font-size:0.9em;
}
#collection > aside > .sale-button {
	display:block;
	clear:both;
}
#collection h1,
#content > aside h1 {
	font-size:1.4em;
	margin-top:8%;
	margin-bottom:8%;
}
#collection-main,
#product-main {
	margin-bottom:1%;
}
#collection-main > img {
	width:100%;
	margin-bottom:3.5%;
}
#collection-products {
	overflow:auto;
}
#collection-products .circle.sale {
	display:none;
}
#collection > .products a {
	display:block;
}
#collection .product {
	width:30.5%;
	margin:0 1.4% 3%;
}
#collection .image {
	background:white none center center no-repeat;
	background-size:100% auto;
	height:0;
	padding-bottom:150%;
	margin-bottom:2%;
}
#collection .image {
	background-size:contain;
}
#collection-products img {
	display:none;
}
#collection .title {
	line-height:1;
	color:#6B6C6F;
	font-size:1.05em;
	margin-bottom:-2px;
	display:block;
}
#collection .price {
	color:#666;
}
#pagination-area {
	margin-top:5%;
}

#collection-menu {
	font-size:0.9em;
	margin-bottom:23%;
	width:100%;
}
#collection-menu ul,
#collection-menu li {
	display:none;
}
#collection-menu > nav > ul {
	display:block;
}
#collection-menu ul {
	text-align:left;
	list-style-type:none;
	margin:0;
}
#collection-menu li {
	display:block;
	margin:0;
}
#collection-menu button,
#collection-menu a {
	letter-spacing:1px;
}
#collection-menu button {
	color:{{ settings.link_color }};
}
#collection-menu a,
#collection-menu > nav > ul > li > button {
	text-transform:uppercase;
}
#collection-menu > nav > ul > li > ul > li > button,
#collection-menu > nav > ul > li > ul > li > a {
	text-transform:lowercase;
	font-size:1.25em;
}
#collection-menu > nav > ul > li,
#collection-menu > nav > ul > li > ul > li {
	margin-bottom:5%;
}
#collection-menu > nav > ul > li > ul {
	padding-left:8%;
}
#collection-menu > nav > ul > li > ul > li > ul {
	padding-left:11%;
}
#collection-menu a {
	padding:0;
	line-height:1.2;
	font-size:1em;
	height:auto;
}
#collection-menu > nav > ul > li > a {
	line-height:1.8;
}

.template--product #content {
	overflow:auto;
}
#product-main {
	position:relative;
	padding-top:5%;
}
#product-back-button {
	position:absolute;
	top:0;
	left:0;
}
#product-menu {
	width:20%;
}
#product {
	overflow:auto;
}
#product > .image {
	width:41.53%;
	padding-top:1em;
}
#product > .info {
	width:50%;
}
#blog article h1,
#product .title {
	color:#808080;
	text-transform:none;
	font-size:1.25em;
	letter-spacing:0;
	margin-bottom:0;
}
#product .price {
	margin-bottom:0;
}
#product > .info > header {
	margin-bottom:3%;
}
#product .description {
	font-size:0.9em;
}
#product form {
	font-size:0.8em;
}
#product label {
	display:inline;
	text-transform:uppercase;
	margin-right:1em;
	line-height:2;
}
#product label::after {
	content:':';
}
#product input[type="number"] {
	border-style:solid;
	border-width:1px;
	height:auto;
	line-height:1;
	width:3em;
}
#product input,
#product select {
	margin-bottom:5%;
}

#customer-order,
#customer-addresses,
#customer-account,
#customer-register,
#customer-login,
#cart,
#blog > .articles,
#page {
	margin-top:4.5%;
}

#blog {
	overflow:auto;
}
#blog > h1 {
	display:none;
}
#blog article h1,
#blog article h2,
#blog article h3 {
	color:#656263;
	font-family:inherit;
}
#blog .date {
	color:#B79F63;
	margin-bottom:0.5%;
	font-size:0.7em;
}
#blog .article > header,
#blog .article h1 {
	font-weight:bold;
}
#blog .article > header {
	font-size:1.3em;
	margin-bottom:5%;
}
#blog > .articles {
	width:64.13%;
	font-size:0.9em;
}
.comments-button {
	display:block;
	height:34px;
	line-height:34px;
	text-transform:uppercase;
	background:transparent url({{ 'heart.png' | asset_url }}) left center no-repeat;
}
.comments-button > span {
	float:left;
	width:40px;
	text-align:center;
	margin-right:0.5em;
}
#blog > aside {
	width:30.25%;
}
#blog-sidebar {
	text-align:center;
}
#blog-sidebar > section {
	margin-bottom:11%;
}
#blog-sidebar > .location {
	text-align:left;
	margin-left:auto;
	margin-right:auto;
	width:87%;
	padding-left:10%;
	box-sizing:border-box;
}
#blog-sidebar > .location p {
	font-size:0.9em;
}
#blog-sidebar h2 {
	text-transform:uppercase;
	color:#C9C3BA;
	letter-spacing:2px;
	font-size:1.1em;
	margin-top:5%;
	margin-bottom:0;
}
#blog-sidebar ul {
	list-style-type:none;
	text-transform:uppercase;
	margin:0;
}
#blog-sidebar li {
	line-height:2;
}
#blog-sidebar > .about {
	font-size:0.9em;
	margin-bottom:25%;
}
#blog-sidebar > .about > h2 {
	margin-top:0;
	margin-bottom:10%;
}
#blog-sidebar > .about > p {
	text-align:left;
	line-height:1.6;
	margin-bottom:5%;
}
#blog-sidebar .search_box {
	text-align:left;
	width:80%;
}
#blog-sidebar .search_box {
	width:calc(100% - 33px);
}
#blog-sidebar .social-media-buttons {
	margin-top:3%;
}
#blog-sidebar .newsletter-inputs {
	margin-bottom:5%;
}
#blog-sidebar .newsletter-inputs .form-item {
	width:51%;
}
#comments h3 {
	font-size:1.1em;
	margin-bottom:0;
}
#comments p {
	padding-left:1em;
}
#comments h2,
#comments-form h2 {
	font-size:1.4em;
}
#comments-form {
	max-width:350px;
}
#comments-form form {
	overflow:auto;
}
#comments-form label {
	display:none;
}
#comments-form .text {
	display:block;
	margin:4% 0;
	width:100%;
	height:32px;
	box-sizing:border-box;
}
#comments-form .notice {
	margin-top:2%;
	text-align:right;
}

#cart-animation {
	display:none;
}

#add_address h4 {
	display:none;
}
#add_address td {
	border-style:none;
}

#page .page-title {
	font-size:1.1em;
	margin-bottom:5%;
}

